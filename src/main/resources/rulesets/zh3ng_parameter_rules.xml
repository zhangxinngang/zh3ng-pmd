<?xml version="1.0" encoding="UTF-8"?>

<ruleset name="My custom rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <rule name="ParameterCommaRule"
            message="方法的定义时，多个参数逗号后边必须加空格。"
            class="com.zh3ng.club.pmd.custom.rules.parameter.ParameterCommaRule">
        <description>
            方法定义时的多参数之间，逗号之后要留一个空格
        </description>
        <priority>1</priority>
        <example>
            <![CDATA[
            public void method(Integer a, String b, Long c){
                ///.....
            }
			]]>
        </example>
    </rule>

    <rule name="ParameterPutInCommaRule"
          message="方法调用时，多个参数逗号后边必须加空格。"
          class="com.zh3ng.club.pmd.custom.rules.parameter.ParameterPutInCommaRule">
        <description>
            方法调用时的多参数之间，逗号之后要留一个空格
        </description>
        <priority>1</priority>
        <example>
            <![CDATA[
            method(a, b, c);
			]]>
        </example>
    </rule>
</ruleset>
