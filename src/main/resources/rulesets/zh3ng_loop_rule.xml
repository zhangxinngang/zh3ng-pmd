<?xml version="1.0" encoding="UTF-8"?>

<ruleset name="My custom rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <rule name="WhileLoopsMustUseBracesRule"
          message="避免使用'while'是不带大括号"
          class="com.zh3ng.club.pmd.custom.WhileLoopsRule">
        <description>
            Avoid using 'while' statements without using curly braces  by zh3ng
        </description>
        <priority>3</priority>

        <example>
            <![CDATA[
    public void doSomething() {
      while (true)
          x++;
    }
]]>
        </example>
    </rule>


    <rule name="ParameterCommaRule"
            message="方法参数之间逗号之后要留一个空格"
            class="com.zh3ng.club.pmd.custom.ParameterCommaRule">
        <description>
            方法的多参数之间，逗号之后要留一个空格
        </description>
        <priority>1</priority>
    </rule>
</ruleset>
